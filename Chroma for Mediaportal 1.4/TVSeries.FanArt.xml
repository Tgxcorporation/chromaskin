			</control>
			<control>
				<id>0</id>
				<type>label</type>
				<posX>660</posX>
				<posY>783</posY>
				<label>924</label>
				<width>600</width>
				<font>font20</font>
				<align>left</align>
				<textcolor>#ColorAlternate</textcolor>
			</control>
			<control>
				<type>group</type>
				<layout>StackLayout(0, Vertical, true)</layout>
				<posX>610</posX>
				<posY>880</posY>
				<control>
					<description>Change Layout</description>
					<type>button</type>
					<id>2</id>
					<label>Change Layout</label>
					<onright>50</onright>
				</control>
				<control>
					<description>Resolution Filter</description>
					<type>button</type>
					<id>12</id>
					<label>Filter</label>
					<onright>50</onright>
				</control>
				<control>
					<description>Random Fanart</description>
					<type>checkbutton</type>
					<id>13</id>
					<label>Random Fanart</label>
					<onright>50</onright>
				</control>
			</control>
		</control>
	</controls>
</window>