			</control>
			<control>
				<type>fadelabel</type>
				<description>Current program title</description>
				<id>0</id>
				<posX>1490</posX>
				<posY>431</posY>
				<width>380</width>
				<label>#TVSeries.FanArt.SelectedFanartResolution</label>
				<textcolor>#ColorMain</textcolor>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</visible>
				<animation effect="fade" time="200">visible</animation>
				<wrapString> ·· </wrapString>
			</control>
			<control>
				<description>Info</description>
				<type>label</type>
				<id>0</id>
				<width>1820</width>
				<posX>50</posX>
				<posY>937</posY>
				<label>#selecteditem</label>
				<align>center</align>
				<font>font16</font>
				<textcolor>#ColorAlternate</textcolor>
				<visible>facadeview.filmstrip|facadeview.coverflow</visible>
				<animation effect="fade" time="200">visible</animation>
			</control>
			<control>
				<description>Info</description>
				<type>label</type>
				<id>0</id>
				<width>1820</width>
				<posX>50</posX>
				<posY>987</posY>
				<label>#TVSeries.FanArt.SelectedFanartResolution</label>
				<align>center</align>
				<font>font14</font>
				<textcolor>#ColorMain</textcolor>
				<visible>facadeview.filmstrip|facadeview.coverflow</visible>
				<animation effect="fade" time="200">visible</animation>
			</control>

		</control>

		<!--  ************** HIDDEN MENU *****************  -->
		<control>
			<type>image</type>
			<id>157986</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1920</width>
			<height>1080</height>
			<texture>white.png</texture>
			<colordiffuse>#ColorMainUnfocusedMenu</colordiffuse>
			<visible>[control.hasfocus(2)|control.hasfocus(12)|control.hasfocus(13)]</visible>
			<animation effect="fade" time="200">visible</animation>
		</control>
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>0</onexit>
			<buttonX>560</buttonX>
			<buttonY>830</buttonY>
			<buttonwidth>800</buttonwidth>
			<buttonheight>1080</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>800</width>
			<height>1080</height>
			<dimColor>ffffffff</dimColor>
			<visible>[control.hasfocus(2)|control.hasfocus(12)|control.hasfocus(13)]</visible>
			<animation effect="fade" time="250" start="75" reversible="false">visible</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" start="0,1080" reversible="false">visible</animation>
			<animation effect="fade" time="250" end="75" reversible="false">hidden</animation>
			<animation effect="slide" tween="circle" easing="in" time="200" end="0,1080" reversible="false">hidden</animation>
			<animation effect="slide" time="150" end="0,600" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" start="0,1080" reversible="false">WindowOpen</animation>
			<animation effect="fade" time="250" start="75" reversible="false">WindowOpen</animation>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>560</posX>
				<posY>680</posY>
				<width>800</width>
				<height>1080</height>
				<texture>background_menu.png</texture>
