<window>
	<controls>
		<!-- common volume gfx -->
		<control>
			<type>image</type>
			<id>999501</id>
			<posX>0</posX>
			<posY>540</posY>
			<width>1920</width>
			<height>540</height>
			<texture>overlay_bottom.png</texture>
			<colordiffuse>#ColorMainUnfocusedOsd</colordiffuse>
			<visible>[control.isvisible(501)|control.isvisible(500)]</visible>
			<animation effect="fade" time="200">visible</animation>
		</control>
		<control>
			<type>image</type>
			<id>999500</id>
			<posX>560</posX>
			<posY>880</posY>
			<width>800</width>
			<height>1080</height>
			<texture>background_menu.png</texture>
			<visible>control.isvisible(501)|control.isvisible(500)</visible>
			<animation effect="slide" tween="circle" easing="out" time="250" start="0,1080" reversible="false">visible</animation>
		</control>
		
		<control>
			<type>volumebar</type>
			<id>501</id>
			<posX>664</posX>
			<posY>980</posY>
			<align>left</align>
			<height>50</height>
			<width>592</width>
			<imageHeight>3</imageHeight>
			<texture>volume.states.png</texture>
			<visible>no</visible>
			<animation effect="slide" tween="circle" easing="out" time="250" start="0,1080" reversible="false">visible</animation>
		</control>
		<control>
			<type>image</type>
			<id>500</id>
			<posX>664</posX>
			<posY>1000</posY>
			<width>592</width>
			<height>10</height>
			<texture>black.png</texture>
			<visible>no</visible>
			<animation effect="slide" tween="circle" easing="out" time="250" start="0,1080" reversible="false" condition="!control.isvisible(501)">visible</animation>
		</control>
	</controls>
</window>